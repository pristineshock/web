---
import { Icon } from "astro-icon";
import Picture from "~/components/core/Picture.astro";
import { getContactPermalink } from "~/utils/permalinks";
---

<section>
  <div class="z-10 max-w-5xl px-4 mx-auto sm:px-6">
    <div class="flex flex-col-reverse flex-wrap gap-6 py-12 md:flex-row md:flex-nowrap md:py-20">
      <div class="pb-10 md:w-7/12 md:pb-16">
        <h1 class="mb-4 text-5xl font-bold leading-tight tracking-tighter lg:text-6xl font-heading">
          Web Design and Development for small businesses.
        </h1>
        <div class="max-w-xl">
          <p class="mb-8 text-xl text-gray-600 dark:text-slate-400">
            Custom web building for anyone on the web. We provide the best service and attention to detail for reasonable pricing.
          </p>
          <div class="flex gap-4 max-w-none flex-nowrap">
            <div class="flex w-full sm:w-auto">
              <a
                class="w-full text-black border btn border-primary-500 bg-primary-500 hover:bg-primary-600 hover:border-primary-600 sm:mb-0"
                href={getContactPermalink()}
              >
                <Icon name="ic:round-email" class="w-5 h-5 mr-2 -ml-1.5" /> Contact Us
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="md:w-5/12">
        <div class="relative m-auto mb-8">
          <Picture
            src={import("~/assets/images/undraw_working.png")}
            class="w-full max-w-sm mx-auto md:max-w-2xl dark:hidden"
            widths={[768, 400]}
            alt="Hero Image"
            aspectRatio="256∶183"
          />
          <Picture
            src={import("~/assets/images/undraw_working_dark.png")}
            class="hidden w-full max-w-sm mx-auto md:max-w-2xl dark:block"
            widths={[768, 400]}
            alt="Hero Image"
            aspectRatio="256∶183"
          />
        </div>
      </div>
    </div>
  </div>
</section>
