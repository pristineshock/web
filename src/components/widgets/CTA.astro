---
import { getHomePermalink } from "~/utils/permalinks.js";
---

<section id="footer-cta" class="w-full bg-slate-300 dark:bg-slate-800 mb-10">
  <div class="container mx-auto p-12 flex justify-center items-center">
    <div class="p-6 text-right basis-1/2">
      <h3 class="text-xl tracking-tight font-bold">Still some doubts? Talk to us!</h3>
      <h3 class="text-xl tracking-tight font-medium">No startup costs, no upfront investment.</h3>
      <h3 class="text-xl tracking-tight font-medium">You pay nothing if you don't love your design.</h3>
    </div>
    <div class="basis-1/2">
      <a href={getHomePermalink()} class="btn bg-primary-500 hover:bg-primary-600 text-black px-12 py-3 text-2xl">Get Started</a>
    </div>
  </div>
</section>
