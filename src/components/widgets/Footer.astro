---
import { Icon } from "astro-icon";
import { SITE, BLOG } from "~/config.mjs";
import { getHomePermalink } from "~/utils/permalinks";
---

<footer class="border-t border-gray-200 dark:border-slate-800">
	<div class="max-w-6xl px-4 mx-auto sm:px-6">
		<div class="grid grid-cols-12 gap-4 py-8 gap-y-8 sm:gap-8 md:py-12">
			<div class="col-span-12 lg:col-span-4">
				<div class="">
					<a class="inline-block text-4xl font-bold font-abel" href={getHomePermalink()}>{SITE.name}</a>
				</div>
				<div class="mr-4 -mt-1 text-sm text-gray-700 dark:text-slate-400">All rights reserved.</div>
				{
					SITE.socialLinks && (
						<div class="py-6 md:flex md:items-center md:justify-between md:py-8">
							<ul class="flex mb-4 -ml-2 md:order-1 md:mb-0">
								{SITE.twitter && (
									<li>
										<a
											class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
											aria-label="Twitter"
											href={SITE.twitter}
											target="_blank"
										>
											<Icon name="tabler:brand-twitter" class="w-5 h-5" />
										</a>
									</li>
								)}
								{SITE.instagram && (
									<li>
										<a
											class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
											aria-label="Instagram"
											href={SITE.instagram}
											target="_blank"
										>
											<Icon name="tabler:brand-instagram" class="w-5 h-5" />
										</a>
									</li>
								)}
								{SITE.linkedin && (
									<li>
										<a
											class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
											aria-label="Linkedin"
											href={SITE.linkedin}
											target="_blank"
										>
											<Icon name="tabler:brand-linkedin" class="w-5 h-5" />
										</a>
									</li>
								)}
								{SITE.github && (
									<li>
										<a
											class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
											aria-label="Github"
											href={SITE.github}
											target="_blank"
										>
											<Icon name="tabler:brand-github" class="w-5 h-5" />
										</a>
									</li>
								)}
							</ul>
						</div>
					)
				}
			</div>
			<div class="col-span-6 md:col-span-3 lg:col-span-2">
				<ul class="font-medium">
					<li class="mb-2">
						<a href="#top" class="text-gray-600 transition hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">Home</a>
					</li>
					<li class="mb-2">
						<a href="#services" class="text-gray-600 transition hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">Services</a>
					</li>
					{
						!BLOG.disabled && (
							<li class="mb-2">
								<a href="#blog" class="text-gray-600 transition hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">
									Blog
								</a>
							</li>
						)
					}
					<li class="mb-2">
						<a href="#contact" class="text-gray-600 transition hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">Contact</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</footer>
